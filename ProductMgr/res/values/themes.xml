<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="BlueTheme"  parent="android:Theme.Light">
        <item name="android:windowBackground">@drawable/theme_blue</item>
        <item name="android:colorBackground">@drawable/transparent_background</item>
        <item name="android:windowTitleSize">@dimen/custom_titlebar_height</item>

        <item name="android:colorForeground">@drawable/blue_forecolor</item>

            
	</style>


    <style name="NoTitleBar" parent="BlueTheme">
        <item name="android:windowNoTitle">true</item>                                                                    
    </style>

    <!-- login theme -->
    
    <style name="loadlistdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/transparent_background</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
        
</resources>
